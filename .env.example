# Site Configuration
NEXT_PUBLIC_SITE_URL=https://pastecn.com

# Announcement Banner Configuration
# Set to "true" to enable the announcement banner
NEXT_PUBLIC_ANNOUNCEMENT_ENABLED=false

# The announcement text to display (one-line announcement)
NEXT_PUBLIC_ANNOUNCEMENT_TEXT=

# Optional: Link URL (e.g., GitHub repo for stars)
NEXT_PUBLIC_ANNOUNCEMENT_LINK_URL=

# Optional: Link text (e.g., "Star us on GitHub")
NEXT_PUBLIC_ANNOUNCEMENT_LINK_TEXT=

# Unique ID for this announcement (used for localStorage dismiss tracking)
# Change this when you want to show the announcement again after it was dismissed
NEXT_PUBLIC_ANNOUNCEMENT_ID=
